<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".child_fragment.LoanFormFragment">

    <!--loan form-->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/loanform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <android.support.v7.widget.CardView
                android:id="@+id/cardTakeLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="4dp">

                    <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="@string/loan_details"/>
                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_below="@+id/text">

                        <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                            android:layout_width="0dp"
                            android:layout_weight="2.7"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:textSize="12sp"
                            android:text="@string/eligibility"/>
                        <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                            android:id="@+id/loanMax"
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:text="@string/max_50_000"
                            android:drawablePadding="4dp" />
                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear">
                        <fewchore.com.exolve.fewchore.views.PoppinsEditText
                            android:id="@+id/editAmount"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="@string/loan_amount"
                            android:textSize="14sp"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>

                    <Spinner
                        android:id="@+id/spinnerDuration"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@+id/textInput"/>
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        android:layout_below="@+id/spinnerDuration"/>


                    <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:layout_below="@+id/view"
                        android:layout_marginTop="14dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <fewchore.com.exolve.fewchore.views.PoppinsTextView
                        android:id="@+id/textTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/dash"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/ic_nigeria_naira_green"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_nigeria_naira_green"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/view"
                        android:layout_marginTop="14dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <FrameLayout
            android:id="@+id/framelogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="14dp"
            android:elevation="10dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/rectangle_green">
            <ImageButton
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:src="@drawable/ic_arrow_forward"
                android:contentDescription="@string/app_name" />
        </FrameLayout>
    </FrameLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cardApproval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_margin="20dp">
        <fewchore.com.exolve.fewchore.views.PoppinsTextView
            android:id="@+id/textApproval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
    </android.support.v7.widget.CardView>

    <include layout="@layout/template_progress"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>