<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LookUpFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/look_up_cards"
        android:textAlignment="center"
        android:textSize="17sp"
        android:padding="10dp"
        android:textStyle="bold"/>

    <include
        android:id="@+id/lookRecycler"
        layout="@layout/template_recyclerview"
        android:layout_below="@+id/btnSkip"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
    <include
        android:id="@+id/progressLk"
        layout="@layout/template_progress"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/text"
        android:background="@android:color/transparent"
        android:minHeight="4dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>