<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardHolder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#9d9c9c">

    <LinearLayout
        android:id="@+id/linearShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="9dp"
        android:visibility="visible"
        android:paddingBottom="9dp"
        android:background="@color/white"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:weightSum="4">
        <fewchore.com.exolve.fewchore.views.PoppinsTextView
            android:id="@+id/textPlan"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="@string/plan"
            android:layout_height="wrap_content" />
        <fewchore.com.exolve.fewchore.views.PoppinsTextView
            android:id="@+id/textInvested"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:text="@string/invested"
            android:gravity="center"

            android:layout_height="wrap_content" />
        <fewchore.com.exolve.fewchore.views.PoppinsTextView
            android:id="@+id/textTotal"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:gravity="end"
            android:text="@string/total_earnings"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/broadShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:weightSum="4">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plan"/>
            <fewchore.com.exolve.fewchore.views.PoppinsTextView
                android:id="@+id/textPlan1"
                android:layout_marginLeft="20sp"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1">

        <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invested_amount"/>
        <fewchore.com.exolve.fewchore.views.PoppinsTextView
            android:id="@+id/textInvested1"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:layout_marginStart="20sp" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear2">

            <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_earnings"/>
            <fewchore.com.exolve.fewchore.views.PoppinsTextView
                android:id="@+id/textTotal1"
                android:layout_marginLeft="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_marginStart="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear3">

            <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/due_date"/>
            <fewchore.com.exolve.fewchore.views.PoppinsTextView
                android:id="@+id/textDueDate"
                android:layout_marginLeft="20sp"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp" />
        </LinearLayout>
        <fewchore.com.exolve.fewchore.views.PoppinsButton
            android:id="@+id/buttonDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear4"
            android:layout_alignParentEnd="true"
            android:text="@string/see_more"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:minHeight="3dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>