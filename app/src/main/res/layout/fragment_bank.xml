<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/template_bck_"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/guide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/relativeSkip"
        app:layout_constraintVertical_bias="0.24">

            <fewchore.com.exolve.fewchore.views.PoppinsButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/circle"
                android:layout_gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:background="@color/green"/>
        <fewchore.com.exolve.fewchore.views.PoppinsButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="2"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/line_circle"
            android:layout_gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:background="@color/green"/>
        <fewchore.com.exolve.fewchore.views.PoppinsButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/line_circle"
            android:layout_gravity="center"/>
    </LinearLayout>
<ScrollView
    android:id="@+id/scroller"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/guide"
    app:layout_constraintBottom_toTopOf="@+id/relativeSkip">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_details"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="end"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <Spinner
                android:id="@+id/spinnerBankName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/bank_name"
                android:inputType="textEmailAddress"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <Spinner
                android:id="@+id/spinnerAcctType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <fewchore.com.exolve.fewchore.views.PoppinsEditText
                    android:id="@+id/editAccountNo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/account_number"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <fewchore.com.exolve.fewchore.views.PoppinsEditText
                        android:id="@+id/editAccountName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/account_name"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>
                <ProgressBar
                    android:id="@+id/progressName"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">
                    <fewchore.com.exolve.fewchore.views.PoppinsEditText
                        android:id="@+id/editBVN"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/bvn"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>
                <ProgressBar
                    android:id="@+id/progressBVN"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>
        <fewchore.com.exolve.fewchore.views.PoppinsButton
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_green"
        android:textColor="@color/white"
        android:text="@string/next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_arrow_forward_small"
        android:drawableEnd="@drawable/ic_arrow_forward_small" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>

    <RelativeLayout
        android:id="@+id/relativeSkip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroller">

        <fewchore.com.exolve.fewchore.views.PoppinsButton
            android:id="@+id/buttonSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:minHeight="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:textColor="@color/green"/>
    </RelativeLayout>
<include layout="@layout/template_progress"/>
</android.support.constraint.ConstraintLayout>