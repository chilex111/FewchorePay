<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="490dp"
    android:minWidth="390dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_green">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
        android:id="@+id/textPlan"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
                <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                    android:id="@+id/textPlan1"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linear"
                android:layout_margin="10dp">
                <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="@string/date_created"/>
                <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                    android:id="@+id/textDateCreated"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linear1"
                android:layout_margin="10dp">
                <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="@string/duration"/>
                <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                    android:id="@+id/textDuration"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linear2"
                android:layout_margin="10dp">
                <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="@string/invested_amount"/>
                <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                    android:id="@+id/textInvested"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linear3"
                android:layout_margin="10dp">
                <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="@string/interest"/>
                <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                    android:id="@+id/textInterest"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linear4"
                android:weightSum="4"
                android:layout_margin="10dp">
                <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="@string/total_earnings"/>
                <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                    android:id="@+id/textTotal"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_below="@+id/linear5"
                android:layout_margin="10dp">
                <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="Maturing date"/>
                <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                    android:id="@+id/textDueDate"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_below="@+id/linear6"
                android:layout_margin="10dp">
                <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="Bank Acct No"/>
                <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                    android:id="@+id/textAcctNo"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"/>
            </LinearLayout>

            <fewchore.com.exolve.fewchore.views.PoppinsButton
                android:id="@+id/withdraw"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:text="@string/withdraw_investment"
                android:layout_below="@id/linear7"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line_rectangle_red"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</android.support.constraint.ConstraintLayout>