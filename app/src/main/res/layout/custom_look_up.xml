<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_margin="4dp">

        <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
            android:id="@+id/text1"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_no"
            android:textColor="@color/grey"/>

        <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
            android:id="@+id/textCardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text1"
            android:layout_toRightOf="@+id/text1"
            android:layout_below="@id/textCardType"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
            android:id="@+id/text3"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expiry_date"
            android:textColor="@color/grey"
            android:layout_below="@+id/text1"/>

        <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
            android:id="@+id/textExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text3"
            android:layout_toRightOf="@+id/text3"
            android:layout_below="@id/text1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cvv"
            android:layout_marginTop="16dp"
            android:textColor="@color/grey"
            android:layout_below="@+id/text3"/>

        <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
            android:id="@+id/textCardCVV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text2"
            android:layout_toRightOf="@+id/text2"
            android:layout_below="@id/text3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/buttonActivate"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/activate_account"
            android:layout_below="@id/textCardCVV"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_green"

            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>