<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:tag="1"
    android:id="@+id/loanContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".child_fragment.DashLoanFragment">




   <FrameLayout
       android:id="@+id/container"
       android:layout_width="0dp"
       android:layout_height="0sp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- TODO: Update blank fragment layout -->
   <android.support.v7.widget.CardView
       android:id="@+id/cardTakeLoan"
        android:layout_width="0dp"
       android:visibility="visible"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp">


      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:orientation="vertical">

            <fewchore.com.exolve.fewchore.views.PoppinsBoldTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loan_details"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold"/>
            <fewchore.com.exolve.fewchore.views.PoppinsTextView
                android:id="@+id/amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loan_amount"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/grey"
                android:layout_below="@+id/text"
                android:textStyle="bold"/>

            <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_nigeria_naira_green"
                android:drawableLeft="@drawable/ic_nigeria_naira_green"
                android:layout_below="@+id/text"
                android:textStyle="bold"/>

            <fewchore.com.exolve.fewchore.views.PoppinsTextView
                android:id="@+id/intr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interest_rate"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey"
                android:layout_below="@+id/amt"
                android:textStyle="bold"/>

            <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                android:id="@+id/textInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/amt"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_nigeria_naira_green"
                android:drawableLeft="@drawable/ic_nigeria_naira_green"
                android:textStyle="bold"/>

            <fewchore.com.exolve.fewchore.views.PoppinsTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/due_date"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey"
                android:layout_below="@+id/intr"
                android:textStyle="bold"/>

            <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                android:id="@+id/textDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/intr"
                android:textStyle="bold"/>
            <fewchore.com.exolve.fewchore.views.PoppinsTextView
                android:id="@+id/extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extra_charge"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey"
                android:layout_below="@+id/date"
                android:textStyle="bold"/>

            <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                android:id="@+id/textxtraCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_45_45_45_45"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/date"
                android:textStyle="bold"/>

            <fewchore.com.exolve.fewchore.views.PoppinsTextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/cardview_dark_background"
                android:layout_below="@+id/extra"
                android:textStyle="bold"/>

            <fewchore.com.exolve.fewchore.views.PoppinsLightTextView
                android:id="@+id/textTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/extra"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_nigeria_naira_green"
                android:drawableLeft="@drawable/ic_nigeria_naira_green"
                android:textStyle="bold"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardApproval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_margin="20dp">
        <fewchore.com.exolve.fewchore.views.PoppinsTextView
            android:id="@+id/textApproval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_margin="10dp"/>
    </android.support.v7.widget.CardView>


